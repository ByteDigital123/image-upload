{
    "name": "byte123/image-upload",
    "description": "A package to handle image uploads",
    "keywords": [
        "byte123",
        "image-upload"
    ],
    "homepage": "https://github.com/byte123/image-upload",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Chris",
            "email": "chris@byte-digital.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "^6.0",
        "intervention/image": "^2.5"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Byte123\\ImageUpload\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Byte123\\ImageUpload\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Byte123\\ImageUpload\\ImageUploadServiceProvider"
            ],
            "aliases": {
                "ImageUpload": "Byte123\\ImageUpload\\ImageUploadFacade"
            }
        }
    }
}
